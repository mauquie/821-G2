{% extends 'base.html.twig' %}

{% block body %}

	 <div class="example-wrapper">
            <h1>ACCOUNT</h1>    
            
            <p>Username: {{ app.user.Username }}</p>
            <p>Email: {{ app.user.Email }}</p>
            <p>Roles: {{ app.user.Roles[0] }}</p>
            
            <br > <br >          
            <h1>CHANGE SETTINGS</h1>

    		{{ form_start(form) }}
        
            {{ form_row(form.username, { 'attr': {'placeholder':'pseudo'}}) }}
            {{ form_row(form.email, { 'attr': {'placeholder':'Adresse mail'}}) }}
            {{ form_row(form.password.first,{ 'attr': {'placeholder':'Mot de passe'}}) }}
            {{ form_row(form.password.second,{ 'attr': {'placeholder':'Confirmer mot de passe'}}) }}
            
            <button type="submit" class="btn btn-success">Change</button>
        
            {{ form_end(form) }}
        </div>
{% endblock %}