<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
        {% block stylesheets %}{% endblock %} 
    </head>
    <body>
    
      <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
            
            .no-account { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .no-account code { background: #F5F5F5; padding: 2px 6px; }
            
      </style>
                
    	<nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
          <a class="navbar-brand" href="/">GRP-2</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/agenda">Agenda</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/promo">PROMO</a>
              </li>
               {% if app.user and app.user.Roles[0] == 'ROLE_ADMIN' %}
              <li class="nav-item">
              	<a class = "nav-link" href="/booking">MODIF</a>
              </li>
               <li class="nav-item">
              	<a class = "nav-link" href="/admin/users">GESTION</a>
              </li>
              {% endif %}
             </ul>
    
             <ul class="navbar-nav mr-right">
              {% if not app.user %}
              <li class="nav-item">
                <a class="nav-link" href="/inscription">ENREGISTREMENT</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('login') }}">Connexion</a>
              </li>
              {% else %}
              <li class="nav-item">
              	<a class="nav-link" href= "/account">{{ app.user.Email }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('logout') }}">Deconnexion</a>
              </li>
              {% endif %}
            </ul>
          </div>
        </nav>
        <div class="container"></div>
       	    {% block body %}{% endblock %}
       	</div>
        {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
