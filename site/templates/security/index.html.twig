{% extends 'base.html.twig' %}

{% block body %}

    <H1>Inscription !</H1>

    {{ form_start(form) }}

    {{ form_row(form.username, { 'attr': {'placeholder':'pseudo'}}) }}
    {{ form_row(form.email, { 'attr': {'placeholder':'Adresse mail'}}) }}
    {{ form_row(form.password.first,{ 'attr': {'placeholder':'Mot de passe'}}) }}
    {{ form_row(form.password.second,{ 'attr': {'placeholder':'Confirmer mot de passe'}}) }}
    
    <button type="submit" class="btn btn-success">s'inscrire</button>

    {{ form_end(form) }}

{% endblock %}
