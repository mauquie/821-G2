{% extends 'base.html.twig' %}

{%  block title  %}Reinitialisation de mot de passe{% endblock %}
{% block body %}
	<h1>Reset Password</h1>
	{{ form_start(ResetForm) }}
	
    {{ form_row(ResetForm.password.first,{ 'attr': {'placeholder':'Mot de passe'}}) }}
    {{ form_row(ResetForm.password.second,{ 'attr': {'placeholder':'Confirmer mot de passe'}})}}
    <button type="submit" class="btn btn-success">RESET</button>
	
	{{ form_end(ResetForm) }}
{% endblock %}